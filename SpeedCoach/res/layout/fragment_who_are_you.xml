<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lehmannsystems.basicspeedcoach.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/WhoAreYouLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/who_are_you_Label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/SelectCoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="setPersonType"
        android:text="@string/coach_Label" />

    <Button
        android:id="@+id/SelectCoxswain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setPersonType"
        android:text="@string/coxswain_Label" />

    <Button
        android:id="@+id/SelectViewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setPersonType"
        android:text="@string/viewer_Label" />

</LinearLayout>
