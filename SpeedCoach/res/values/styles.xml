<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="CoachTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CoachActionBar</item>
        <item name="android:windowBackground">@color/coach_bg</item>
        
    </style>

    <style name="CoachActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/coach_bar</item>
        <item name="android:titleTextStyle">@style/CoachTitleText</item>
    </style>

    <style name="CoachTitleText" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/coach_title</item>
        <item name="android:textSize">17sp</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="CoxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CoxActionBar</item>
        <item name="android:windowBackground">@color/cox_bg</item>
    </style>

    <style name="CoxActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/cox_bar</item>
        <item name="android:titleTextStyle">@style/CoxTitleText</item>
    </style>

    <style name="CoxTitleText" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/cox_title</item>
        <item name="android:textSize">17sp</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="WhoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/WhoActionBar</item>
        <item name="android:windowBackground">@color/viewer_bg</item>
        
    </style>

    <style name="WhoActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/viewer_bar</item>
        <item name="android:titleTextStyle">@style/WhoTitleText</item>
    </style>

    <style name="WhoTitleText" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/viewer_title</item>
        <item name="android:textSize">17sp</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
